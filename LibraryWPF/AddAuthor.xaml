<Window x:Class="LibraryWpf.AddAuthor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryWpf"
        mc:Ignorable="d"
        Title="Add Author" Height="200" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="surenameTextBox" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" Text="Surename" VerticalAlignment="Top" Width="120" GotFocus="surenameTextBox_OnFocus"/>
        <TextBox x:Name="nameTextBox" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" GotFocus="nameTextBox_OnFocus"/>
        <TextBox x:Name="idTextBox" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,40,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="120" GotFocus="idTextBox_OnFocus"/>
        <Button Content="Submit" HorizontalAlignment="Center" Margin="0,109,0,0" VerticalAlignment="Top" Width="120" Height="18" Click="SubmitButton_OnClick"/>
        <Button Content="Close" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" Width="120" Height="18" Click="CloseButton_OnClick"/>

    </Grid>
</Window>
